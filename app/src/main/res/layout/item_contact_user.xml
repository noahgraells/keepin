<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/semi_list_padding"
    android:gravity="center_vertical"
    android:onClick="contactSelected"
    >

    <ImageView
        android:id="@+id/imv_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/pp_02" />


    <TextView
        android:id="@+id/txv_contact_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorMainText"
        android:textSize="@dimen/card_title" />

    <TextView
        android:id="@+id/txv_contact_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorMainText"
        android:textSize="@dimen/card_title" />

    <ImageButton
        android:id="@+id/btn_action"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_weight="0"
        android:background="@drawable/shape_icon_button"
        android:scaleType="fitXY"
        android:src="@drawable/ic_profile_24dp"/>

</LinearLayout>