<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/green</item>
        <item name="colorDisableText">@color/lightGrey</item>
        <item name="android:fontFamily">@font/heebo</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="colorMainText">@color/black</item>
        <item name="colorMainBackground">@color/veryLightGrey</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DarkAppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorMainText">@color/white</item>
        <item name="colorMainBackground">@color/veryDarkGrey</item>
        <item name="android:statusBarColor">@color/darkGrey</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
